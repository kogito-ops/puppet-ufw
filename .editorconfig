; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{toml,yml,yaml,xml}]
indent_size = 2

[*.{bash,sh}]
indent_size = 4
indent_style = tab

[*.{ps1,bat}]
indent_size = 4
indent_style = tab
end_of_line = crlf

[*.{erb,pp,rb}]
indent_size = 2

[Gemfile]
indent_size = 2
